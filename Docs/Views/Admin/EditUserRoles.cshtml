@using Microsoft.AspNetCore.Identity
@model Docs.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = $"Roles of {Model.UserEmail}";
}

<h1>Roles of @Model.UserEmail</h1>

<form method="post" asp-action="EditUserRoles">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
            @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Save</button>
</form>

<div>
    <a class="btn btn-light m-4" asp-action="Users">Back to Users</a>
</div>
